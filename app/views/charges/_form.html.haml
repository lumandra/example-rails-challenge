= form_for @charge do |f|
  - if @charge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@charge.errors.count, "error")} prohibited this charge from being saved:"
      %ul
        - @charge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :paid
    = f.check_box :paid
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :refunded
    = f.check_box :refunded
  .field
    = f.label :customer_id
    = f.number_field :customer_id
  .actions
    = f.submit 'Save'
